@model WebApp.ViewModels.Emulators.EmulatorCreateEditViewModel

<div class="form-group">
    <label asp-for="Emulator.PlatformId" class="control-label"></label>
    <select asp-for="Emulator.PlatformId" class ="form-control" asp-items="ViewBag.PlatformId"></select>
</div>
<div class="form-group">
    <label asp-for="Emulator.Name" class="control-label"></label>
    <input asp-for="Emulator.Name" class="form-control" />
    <span asp-validation-for="Emulator.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Emulator.Url" class="control-label"></label>
    <input asp-for="Emulator.Url" class="form-control" />
    <span asp-validation-for="Emulator.Url" class="text-danger"></span>
</div>